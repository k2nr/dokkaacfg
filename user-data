#cloud-config
coreos:
  etcd:
    addr: $public_ipv4:4001
    peer-addr: $public_ipv4:7001
    discovery: https://discovery.etcd.io/40a854ba6063d605c42571e23dad4e5d
  fleet:
    public-ip: $public_ipv4
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
       [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
  - name: dokkaa-scheduler.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=dokkaa-scheduler
      After=docker.service
      Requires=docker.service

      [Service]
      ExecStart=/usr/bin/docker run --name scheduler \
                  -v /var/run/docker.sock:/var/run/docker.sock \
                  -e HOST_IP=$public_ipv4 \
                  -e DOCKER_HOST=unix:///var/run/docker.sock \
                  -e ETCD_ADDR=$public_ipv4:4001 \
                  --restart=always \
                  k2nr/dokkaa-scheduler
      ExecStop=/usr/bin/docker stop scheduler
