#cloud-config
coreos:
  etcd:
    addr: $public_ipv4:4001
    peer-addr: $public_ipv4:7001
    discovery: https://discovery.etcd.io/40a854ba6063d605c42571e23dad4e5d
  fleet:
    public-ip: $public_ipv4
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
       [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
  - name: dokkaa-conductor.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=dokkaa-conductor
      After=docker.service
      Requires=docker.service

      [Service]
      EnvironmentFile=/etc/environment
      ExecStartPre=/usr/bin/docker pull k2nr/dokkaa-conductor
      ExecStart=/usr/bin/docker run --name __conductor \
                  -v /var/run/docker.sock:/var/run/docker.sock \
                  -e HOST_IP=$public_ipv4 \
                  -e DOCKER_HOST=unix:///var/run/docker.sock \
                  -e ETCD_ADDR=$public_ipv4:4001 \
                  --restart=always \
                  k2nr/dokkaa-conductor
      TimeoutStartSec=30m
      ExecStop=/usr/bin/docker rm -f __conductor
  - name: dokkaa-ambassador.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=dokkaa-ambassador
      After=docker.service
      Requires=docker.service

      [Service]
      ExecStartPre=/usr/bin/docker pull k2nr/dokkaa-ambassador
      ExecStart=/usr/bin/docker run --name __ambassador \
                  -v /var/run/docker.sock:/var/run/docker.sock \
                  -e DOCKER_HOST=unix:///var/run/docker.sock \
                  --dns=$public_ipv4 \
                  --restart=always \
                  k2nr/dokkaa-ambassador
      TimeoutStartSec=30m
      ExecStop=/usr/bin/docker rm -f __ambassador
  - name: skydns.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=skydns
      After=docker.service
      Requires=docker.service

      [Service]
      ExecStartPre=/usr/bin/docker pull k2nr/skydns-docker
      ExecStart=/usr/bin/docker run --name __skydns \
                  -e ETCD_MACHINES=http://$public_ipv4:4001 \
                  -e SKYDNS_ADDR=0.0.0.0:53 \
                  -e SKYDNS_NAMESERVERS=8.8.8.8:53,8.8.4.4:53 \
                  -p $public_ipv4:53:53/udp \
                  k2nr/skydns-docker
      TimeoutStartSec=30m
      ExecStop=/usr/bin/docker rm -f __skydns
  - name: dokkaa-api.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=dokkaa-api
      After=dokkaa-conductor.service
      Requires=docker.service

      [Service]
      ExecStartPre=/usr/bin/docker pull k2nr/dokkaa-api
      ExecStart=/usr/bin/docker run --name dokkaa-api \
                  -e ETCD_ADDR=http://$public_ipv4:4001 \
                  -e DOKKAA_APP_NAME=api \
                  -e DOKKAA_SERVICE_API=80 \
                  -e DOKKAA_ROLE_API=web \
                  -P \
                  k2nr/dokkaa-api
      TimeoutStartSec=30m
      ExecStop=/usr/bin/docker rm -f dokkaa-api

      [X-Fleet]
      Global=true
  - name: dokkaa-web-router.service
    command: start
    enable: true
    content: |
      [Unit]
      Description=dokkaa-web-router
      After=skydns.service
      Requires=docker.service

      [Service]
      ExecStartPre=/usr/bin/docker pull k2nr/dokkaa-web-router
      ExecStart=/usr/bin/docker run --name __web-router \
                  -e NS_IP=$public_ipv4 \
                  -e TARGET=web.skydns.local \
                  -e DOMAINS=dokkaa.io \
                  -p 80:80 \
                  k2nr/dokkaa-web-router
      TimeoutStartSec=30m
      ExecStop=/usr/bin/docker rm -f __web-router
